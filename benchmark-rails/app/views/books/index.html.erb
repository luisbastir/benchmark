<ul>
  <li>
    <%= link_to "Authors", authors_path %>
  </li>
  <li>
    <%= link_to "Books", books_path %>
  </li>
</ul>
<br>
<h1>Books</h1>
<br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody>
    <% if @books.size > 0 %>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book.id, book_path(book) %>
          </td>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.year %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3">
          No items found
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Add new book", new_book_path %>

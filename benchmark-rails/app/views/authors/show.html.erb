<ul>
  <li>
    <%= link_to "Authors", authors_path %>
  </li>
  <li>
    <%= link_to "Books", books_path %>
  </li>
</ul>
<br>
<h1>Edit author</h1>
<br>
<%= form_with model: @author, url: author_path(@author), method: "put" do |f| %>
  <div>
    <%= f.label :first_name, value: "First Name" %>&nbsp;
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name, value: "Last Name" %>&nbsp;
    <%= f.text_field :last_name %>
  </div>
  <%= f.submit "Update" %>
<% end %>
<br>
<%= link_to "Delete", author_path(@author), method: "delete", confirm: "Are you sure?" %>
<br>
<hr>
<h1>Author's books</h1>
<br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody>
    <% if @books.size > 0 %>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to book.id, book_path(book) %>
          </td>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.year %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3">
          No items found
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Back", authors_path %>